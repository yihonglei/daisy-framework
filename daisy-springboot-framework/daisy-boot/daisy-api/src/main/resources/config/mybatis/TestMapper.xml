<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jpeony.core.mapper.TestMapper">
    <resultMap id="BaseResultMap" type="com.jpeony.core.pojo.domain.TestDO">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="test_name" property="testName" jdbcType="VARCHAR"/>
    </resultMap>

    <!--
        create table test(
            id int(11) unsigned not null auto_increment,
            test_name varchar(120),
            primary key (id)
        );

        insert into test(id, test_name) values (1, 'one');
    -->

    <select id="queryTestByIdXml" parameterType="int" resultMap="BaseResultMap">
        select
        id,
        test_name
        from test
        where id = #{id}
    </select>
</mapper>